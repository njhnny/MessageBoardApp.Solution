@{
  ViewData["Title"] = "All Messages";
}

<div class="jumbotron">
  <h2>All Messages</h2>
</div>

@if(@Model.Count > 0)
{
  <ul>
    @foreach (Message message in Model)
    {
      <li>
      @Html.ActionLink($"{message.Header}", "Details", new { id = message.MessageId})
      </li>
    }
  </ul>  
}
else
{
  <p>No messages have been posted</p>
}

@Html.ActionLink("Create Message", "Create")