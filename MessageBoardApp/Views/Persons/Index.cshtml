@{
  ViewData["Title"] = "All Users";
}

<div class="jumbotron">
  <h2>All Users</h2>
</div>

@if (@Model.Count > 0)
{
  <ul>
  @foreach (Person person in Model)
    {
      <li>
        @Html.ActionLink($"{person.Name}", "Details")
      </li>
    }
  </ul>
}
else
{
  <p>No users have been created.</p>
}

<form action="/CurrentUser/Edit/1" method="post">
  <input data-val="true" data-val-required="The CurrentUserId field is required." id="CurrentUserId" name="CurrentUserId" type="hidden" value="1">
  @Html.Label("PersonId", "Select Current User")
  @Html.DropDownList("PersonId", ViewBag.PersonId, "user", new { id = "PersonId" })
  <input type="submit" value="Login" class="btn btn-dark" />
</form>

@Html.ActionLink("Create User", "Create")