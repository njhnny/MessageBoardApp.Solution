@{
  ViewData["Title"] = "All Users";
}

<div class="jumbotron">
  <h2>All Users</h2>
</div>

@if(@Model.Count > 0)
{
  <ul>
    @foreach (Person person in Model)
    {
      <li>
      @Html.ActionLink($"{person.Name}", "Details", new { id = person.PersonId})
      </li>
    }
  </ul>  
}
else
{
  <p>No users have been created.</p>
}

@Html.ActionLink("Create User", "Create")